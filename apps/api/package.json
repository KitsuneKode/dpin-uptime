{
  "name": "@dpin-uptime/api",
  "module": "./src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run dist/index.js",
    "lint": "bun run lint"
  },
  "devDependencies": {
    "@dpin-uptime/typescript-config": "*",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "tsdown": "^0.15.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dpin-uptime/backend-common": "*",
    "@dpin-uptime/common": "*",
    "@dpin-uptime/auth": "*",
    "@dpin-uptime/store": "*",
    "@dpin-uptime/trpc": "*",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
