    "lint": "bun run lint"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@dpin-uptime/typescript-config": "*",
    "tsdown": "^0.15.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
